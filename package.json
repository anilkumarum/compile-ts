{
	"name": "compile-ts",
	"displayName": "Typescript Compiler",
	"description": "Ultra fast typescript compiler. Speedup typescript Compile time. Typescript Compiler use swc under the hood. Save valuable time while debug typescript",
	"version": "0.0.1",
	"publisher": "anilkumarum",
	"license": "MIT",
	"author": {
		"name": "anilkumarum",
		"url": "https://github.com/anilkumarum"
	},
	"engines": {
		"vscode": "^1.77.0"
	},
	"keywords": [
		"Typescript",
		"Ts",
		"Compiler",
		"Transpiler",
		"ts Compiler"
	],
	"categories": [
		"Other"
	],
	"galleryBanner": {
		"color": "#41205f",
		"theme": "dark"
	},
	"activationEvents": [
		"onDebug"
	],
	"main": "./out/extension",
	"contributes": {
		"commands": [
			{
				"command": "compilets.compileTs",
				"title": "Compile rootDir Typescript",
				"category": "Compiler"
			}
		],
		"configuration": {
			"title": "module Type",
			"properties": {
				"compilets.config.module": {
					"type": "string",
					"default": "commonjs",
					"enum": [
						"commonjs",
						"es6",
						"nodenext"
					],
					"description": "Output module type"
				},
				"compilets.custom.runCommand": {
					"type": "string",
					"default": null,
					"description": "Add your custom command after compiled rootDir"
				}
			}
		},
		"keybindings": [
			{
				"command": "compilets.compileTs",
				"key": "ctrl+alt+c",
				"mac": "cmd+option+c",
				"when": "editorTextFocus"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run bundle",
		"bundle": "esbuild extension.ts --bundle --format=cjs",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./"
	},
	"dependencies": {
		"@swc/core": "^1.3.55"
	},
	"devDependencies": {
		"@types/node": "^18.16.0",
		"@types/vscode": "^1.77.0"
	}
}
